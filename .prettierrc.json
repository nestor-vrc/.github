{
    "$schema": "https://json.schemastore.org/prettierrc",
    "arrowParens": "always",
    "plugins": ["prettier-plugin-pkg"],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 2,
                "printWidth": 80
            }
        }
    ]
}
